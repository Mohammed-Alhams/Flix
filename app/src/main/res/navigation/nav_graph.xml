    app:startDestination="@id/moviesByKeywordFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.red_velvet.flix.ui.home.HomeFragment"
        android:label="HomeFragment"
        android:layout="@layout/fragment_home" />
    <fragment
